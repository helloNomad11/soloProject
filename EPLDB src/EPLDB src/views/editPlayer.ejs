<!-- editPlayer.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Player</title>
    <link rel="stylesheet" href="/css/cForm.css">
</head>
<body>
    <div class="container">
        <h1>Edit Player</h1>
        <form action="/players/<%= playerId %>/edit" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= player.name %>" required>
            </div>
            <div class="form-group">
                <label for="team">Team:</label>
                <input type="text" id="team" name="team" value="<%= player.team %>" required>
            </div>
            <div class="form-group">
                <label for="number">Number:</label>
                <input type="text" id="number" name="number" value="<%= player.number %>" required>
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" id="age" name="age" value="<%= player.age %>" required>
            </div>
            <div class="form-group">
                <label for="position">Position:</label>
                <input type="text" id="position" name="position" value="<%= player.position %>" required>
            </div>
            <div class="form-group">
                <label for="photoUrl">Photo URL:</label>
                <input type="text" id="photoUrl" name="photoUrl" value="<%= player.photoUrl %>" required>
            </div>
            <button type="submit">Update</button>
        </form>
    </div>
</body>
</html>
